          <div class="card-body text-center">
            <i class="fas fa-mobile-alt text-primary mb-2"></i>
            <h4 class="text-uppercase m-0"><%= t(:phone) %></h4>
            <hr class="my-4" />
            <div class="small text-black-50"><%= tel_to(phone_number: '0500243893', country_code: 38) %></div>
            <div class="small text-black-50"><%= tel_to(phone_number: '1799366626', country_code: 49) %></div>
